<?xml version="1.0" encoding="utf-8"?>
<template>
    <name>caweb</name>
    <author>Danny Guzman</author>
    <email>guzmanjd86@gmail.com</email>
    <description>phpDocumentor Template Config File for the CAWeb WordPress Theme</description>
    <version>1.0.0</version>
    <parameters>
        <parameter key="twig-debug">true</parameter>
    </parameters>
    <transformations>
        <!-- Externalization -->

        <!-- File Copies -->
        <transformation writer="FileIo" query="copy" source="css/" artifact="css/" />
        <transformation writer="FileIo" query="copy" source="fonts/" artifact="fonts/" />
        <transformation writer="FileIo" query="copy" source="imgs/" artifact="imgs/" />
        <transformation writer="FileIo" query="copy" source="js/" artifact="js/" />

        <!-- Page Creations -->
        <transformation writer="twig" source="index.html.twig" artifact="index.html" />
        <transformation writer="twig" query="files" source="files.html.twig" artifact="files.html" />
        <transformation writer="twig" query="files" source="files/index.html.twig" />
        <transformation writer="twig" query="indexes.classes" source="classes/index.html.twig" />
        <transformation writer="twig" source="filters.html.twig" artifact="filters.html" />
        <transformation writer="twig" source="reports/errors.html.twig" artifact="reports/errors.html" />
        <transformation writer="twig" source="reports/markers.html.twig" artifact="reports/markers.html" />
        <transformation writer="twig" query="indexes.packages" source="packages/index.html.twig" />

        <!-- End Externalization -->

        <!-- Theme Specific Pages -->
        <transformation writer="twig" source="theme/index.html.twig" artifact="index.html" />
        <transformation writer="twig" query="files" source="theme/files.html.twig" artifact="files.html" />

        <!-- Theme How To Pages -->
        <transformation writer="twig" source="theme/enforce-wpcs.html.twig" artifact="/how-to/enforce-wpcs.html" />
        
        <transformation writer="FileIo" query="copy" source="theme/imgs/gulp-tasks.png" artifact="imgs/gulp-tasks.png" />
        <transformation writer="twig" source="theme/gulp.html.twig" artifact="/how-to/gulp.html" />

        <!-- Examples -->
        <transformation writer="twig" source="theme/examples.html.twig" artifact="examples/index.html" />
        
        <!-- Icon Font Library -->
        <transformation writer="twig" source="theme/icons.html.twig" artifact="examples/icon-library.html" />

        <!-- Colorscheme Examples -->
        <transformation writer="twig" source="theme/colorscheme.html.twig" artifact="examples/colorscheme/delta.html" />
        <transformation writer="twig" source="theme/colorscheme.html.twig" artifact="examples/colorscheme/eureka.html" />
        <transformation writer="twig" source="theme/colorscheme.html.twig" artifact="examples/colorscheme/mono.html" />
        <transformation writer="twig" source="theme/colorscheme.html.twig" artifact="examples/colorscheme/oceanside.html" />
        <transformation writer="twig" source="theme/colorscheme.html.twig" artifact="examples/colorscheme/orange-county.html" />
        <transformation writer="twig" source="theme/colorscheme.html.twig" artifact="examples/colorscheme/paso-robles.html" />
        <transformation writer="twig" source="theme/colorscheme.html.twig" artifact="examples/colorscheme/sacramento.html" />
        <transformation writer="twig" source="theme/colorscheme.html.twig" artifact="examples/colorscheme/santa-barbara.html" />
        <transformation writer="twig" source="theme/colorscheme.html.twig" artifact="examples/colorscheme/santa-cruz.html" />
        <transformation writer="twig" source="theme/colorscheme.html.twig" artifact="examples/colorscheme/shasta.html" />
        <transformation writer="twig" source="theme/colorscheme.html.twig" artifact="examples/colorscheme/sierra.html" />
        <transformation writer="twig" source="theme/colorscheme.html.twig" artifact="examples/colorscheme/trinity.html" />

    </transformations>
</template>