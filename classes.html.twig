{% extends "vendor/caweb/phpdoc/index.html.twig" %}

{% block head %}
    <title>CAWeb Classes Documentation</title>
{% endblock head %}

{% block introduction %}
<h1>{{ node.name }}</h1>

{# Class Extends #}
{% if node.parent|length > 0 %}
    <p class="text-muted mb-0">extends {{ node.parent|replace({'\\': ''}) }}</p>
{% endif %}

{# Class Implements #}
{% if node.interfaces|length > 0 %}
    <p class="text-muted mb-0">Implements {{ node.interfaces|replace({'\\': ''}) }}</p>
{% endif %}

{# Class Package #}
{% if node.package|length > 0 %}
    <p class="text-muted mb-0">in package {{ node.package.name|replace({'\\': ''}) }}</p>
{% endif %}

{# Class Summary #}
<i>{{ node.summary }}</i>

{% endblock introduction %}

{% block table_of_contents %}

{# Table of Contents #}
<div id="class-toc" class="mt-3">
    {# Class Properties #}
    {{ include('vendor/caweb/phpdoc/ssi/properties-toc.html') }}
    
    {# Class Methods #}
    {{ include('vendor/caweb/phpdoc/ssi/functions-toc.html', {'prefix': 'method'}) }}
</div>
{% endblock table_of_contents %}

{% block body %}
{# Class Properties #}
{{ include('vendor/caweb/phpdoc/ssi/properties.html') }}

{# Class Methods #}
{{ include('vendor/caweb/phpdoc/ssi/functions.html', {'prefix': 'method'}) }}
{% endblock body %}
